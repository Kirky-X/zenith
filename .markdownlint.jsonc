{
  "$schema": "https://raw.githubusercontent.com/DavidAnson/markdownlint/main/schema/markdownlint-config-schema.json",
  "default": true,
  "MD003": {
    "style": "atx"
  },
  "MD007": {
    "indent": 2
  },
  "MD013": {
    "line_length": 120
  },
  "MD026": {
    "punctuation": ".,;:!"
  },
  "MD033": {
    "allowed_elements": ["br", "hr", "pre", "code", "a", "strong", "em", "img", "ul", "ol", "li", "p"]
  },
  "MD041": false
}
