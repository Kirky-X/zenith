# Maintainer: Zenith Team
# Package: zenith
# Description: High-performance, multi-language code formatter with automatic backup and one-click recovery

pkgname=zenith
pkgver=1.0.1
pkgrel=1
pkgdesc="High-performance, multi-language code formatter with automatic backup and one-click recovery"
arch=('x86_64' 'aarch64')
url="https://github.com/user/zenith"
license=('MIT')
makedepends=('rust' 'cargo')
source=("$pkgname-$pkgver.tar.gz::https://github.com/user/zenith/archive/v$pkgver.tar.gz")
sha256sums=('SKIP')  # Replace with actual hash after testing

build() {
  cd "$srcdir/$pkgname-$pkgver"
  cargo build --release --locked --all-features
}

package() {
  cd "$srcdir/$pkgname-$pkgver"
  install -Dm755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm644 README.md "$pkgdir/usr/share/doc/$pkgname/README.md"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}